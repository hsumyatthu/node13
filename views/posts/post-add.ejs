<head>
<% include ../partial/head %>
</head>

<body>


    <!-- Left Panel -->
    <% include ../partial/left-panel %>
<!-- /#left-panel -->

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <% include ../partial/header %>
        <!-- /header -->
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active">Dashboard</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
        <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">Post Add</div>
                <div class="card-body card-block">
                    <form action="/posts/postadd" method="POST">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" name="title" id="title" placeholder="New Post" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                <input type="content" name="content" id="content" placeholder="Post Content22" class="form-control">
                            </div>
                        </div>
                        <select name="author" id="author" class="form-control">
                            <% for(var i = 0; i < users.length; i++){%>
                                <option value="<%= users[i]._id %>"><%= users[i].name %></option>
                            <%}%>
                        </select><p></p>
                
                        <div class="form-actions form-group"><button type="submit" class="btn btn-success btn-sm">Submit</button></div>
                    </form>
                </div>
            </div>
        </div>
        </div>
        </div> <!-- .content -->
    </div><!-- /#right-panel -->

    <!-- Right Panel -->

   <% include ../partial/script %>

</body>
